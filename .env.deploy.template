# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Service Names (will be accessible at servicename.lightshift.local)
BACKEND_SERVICE_NAME=chatkit-backend
FRONTEND_SERVICE_NAME=chatkit-frontend

# Internal Domain Configuration
INTERNAL_DOMAIN=lightshift.local
BACKEND_SUBDOMAIN=chatkit-api
FRONTEND_SUBDOMAIN=chatkit

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-api-key-here

# ChatKit Configuration (optional - get from https://platform.openai.com/settings/organization/security/domain-allowlist)
CHATKIT_DOMAIN_KEY=
CHATKIT_WORKFLOW_ID=

# Backend Configuration
BACKEND_URL=
BACKEND_MEMORY=512Mi
BACKEND_CPU=1
BACKEND_MIN_INSTANCES=0
BACKEND_MAX_INSTANCES=10
BACKEND_TIMEOUT=300
BACKEND_CONCURRENCY=80

# Frontend Configuration
FRONTEND_MEMORY=256Mi
FRONTEND_CPU=1
FRONTEND_MIN_INSTANCES=0
FRONTEND_MAX_INSTANCES=10
FRONTEND_TIMEOUT=60
FRONTEND_CONCURRENCY=80

# Image Configuration
IMAGE_TAG=latest

# Custom Domain (internal)
CUSTOM_DOMAIN=lightshift.local
BACKEND_CUSTOM_DOMAIN=chatkit-api.lightshift.local
FRONTEND_CUSTOM_DOMAIN=chatkit.lightshift.local
